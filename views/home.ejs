<%- include('partials/header') %>

    <body>
        <div class="primaryHeader">
            <img src="images/lockitdown.jpg">
            <h2> Company: <%= CompanyName %>
            </h2>
            <div class="dropdown">
                <input onclick="myFunction()" type="text" placeholder="Search.." id="myInput" onkeyup="filterFunction()"
                    onchange="this.form.submit()">
                <div id="myDropdown" class="dropdown-content">
                    <% foundcompanies.forEach((company)=> { %>
                        <a href='/<%= encodeURIComponent(company.name) %>'>
                            <%= company.name %>
                        </a>
                        <% }) %>

                            <a href="/company">New company</a>
                </div>
            </div>
        </div>

        <div class="Home-control">
            <div class="itemscontainer">
                <% newListItems.forEach((item)=> { %>
                    <div class="items">
                        <form class="deleteform" action="/delete" method="post">
                            <input type="checkbox" name="Checkeditem" value="<%=item._id%>"
                                onchange="this.form.submit()">
                            <h1 class="item">
                                <%= item.name %>
                            </h1>
                            <a href='/update/<%= item._id %>/<%= encodeURIComponent(CompanyName) %>'>
                                <i class="fa-solid fa-pen-to-square"> </i>
                            </a>
                            <input type="hidden" name="companyNames" value="<%= CompanyName %>">
                        </form>
                    </div>

                    <% }); %>
                        <form class="newitems" action="/" method="post">
                            <input type="text" name="newItem" placeholder="Add" autocomplete="off">
                            <button type="submit" name="newcompany" value="<%=CompanyName%>">+</button>

                        </form>
            </div>
        </div>


        <%- include('partials/footer') %>